@model SmartFinances.Models.BudgetPlanner.ExpensesVM

@{
    ViewData["Title"] = "Index";
}

<h1>Budget Planner</h1>
<br/>

<h4>Your monthly budget: @Model.Budget</h4>
<p>
    <a asp-action="SetBudget" class="btn btn-dark">Set budget</a>
</p>
<br />

<p>
    <a asp-action="AddExpense" class="btn btn-success">Add expense</a> | 
    <a asp-action="ViewRegularExpenses" class="btn btn-secondary">Regular expenses</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Expenses) {
        <tr>
            <td>@Html.DisplayFor(modelitem => item.Name)</td>
            <td>@Html.DisplayFor(modelitem => item.Amount)</td>
            <td>@Html.DisplayFor(modelitem => item.Date)</td>
            <td>@Html.DisplayFor(modelitem => item.Type)</td>
            <td>
                <form asp-action="DeleteExpense" asp-route-id="@item.Id">
                    <a asp-action="EditExpense" asp-route-id="@item.Id" class="btn btn-info">Edit</a> |
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this?')" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>

