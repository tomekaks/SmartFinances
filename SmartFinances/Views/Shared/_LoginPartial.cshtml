@using Microsoft.AspNetCore.Identity


<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item dropdown">
          <button class="btn dropdown-toggle" role="button" data-bs-toggle="dropdown">
            Manage account
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" asp-controller="Users" asp-action="PersonalData">Personal data</a></li>
            <li><a class="dropdown-item" asp-controller="Users" asp-action="ChangePassword">Change password</a></li>
          </ul>
        </li>
        <li class="nav-item">
            <label class="nav-link text-dark">Hello @User.Identity.Name!</label>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Users" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Users" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Users" asp-action="Login">Login</a>
        </li>
    }
</ul>
