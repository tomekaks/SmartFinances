@model SmartFinances.Models.Administration.SuspendUserVM

@{
    ViewData["Title"] = "SuspendUser";
}

<h1>Suspend a user</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        User name: @Model.UserName
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="SuspendUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Id" />
            <input hidden asp-for="UserName" />
            <div class="form-group">
                <label asp-for="SuspensionReason" class="control-label"></label>
                <input asp-for="SuspensionReason" class="form-control" />
                <span asp-validation-for="SuspensionReason" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <input type="submit" value="Suspend" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div class="row pt-2" >
    <div class="col-md-4">
        <a class="btn btn-primary" asp-action="Index">Back</a>
    </div>  
</div>

