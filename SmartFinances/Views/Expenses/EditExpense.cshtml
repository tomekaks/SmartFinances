@using SmartFinances.Application.Dto.Enums
@model SmartFinances.Models.Expenses.EditExpenseVM

@{
    ViewData["Title"] = "EditExpense";
}

<h1>Edit Expense</h1>
<hr />

<h4>@Model.Name</h4>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditExpense">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Id" />
            <input hidden asp-for="Name" />
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" 
                asp-items="Html.GetEnumSelectList<ExpenseTypeDto>()">
                </select>  
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
